<%- include('partials/header') %>
<div class="glass-container">
  <div class="card">
    <h1>📝 Editar Comentario</h1>
    <form
      action="<%= baseURLComentarios %>/<%= comentario.id %>?_method=PATCH"
      method="POST"
      class="formulario"
    >
      <input
        value="<%= comentario.usuario %>"
        type="text"
        placeholder="👤 Usuario..."
        name="usuario"
        required
      />
      <textarea
        name="opinion"
        placeholder="✍️ Escribe tu opinión..."
        cols="30"
        rows="5"
        required
      >
<%= comentario.opinion %></textarea
      >
      <div class="botones">
        <input type="submit" value="Guardar" class="btn" />
        <a href="<%= baseURLComentarios %>" class="btn-secondary">Cancelar</a>
      </div>
    </form>
  </div>
</div>
<%- include('partials/footer') %>
