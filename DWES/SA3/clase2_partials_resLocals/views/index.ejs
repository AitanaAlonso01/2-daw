<%- include('partials/header') %>
<div class="glass-container">
  <div class="card">
    <h1>💬 Listado de Comentarios</h1>
    <a href="<%= baseURLComentarios %>/new" class="btn">➕ Nuevo Comentario</a>
    <hr />
    <div class="comentarios">
      <% for (let c of comentarios) { %>
      <div class="comentario">
        <div class="comentario-header">
          <div class="usuario"><b><%= c.usuario %></b></div>
          <div class="comentario-botones">
            <a href="<%= baseURLComentarios %>/<%= c.id %>" title="Ver detalles"
              >🔍</a
            >
            <a href="<%= baseURLComentarios %>/<%= c.id %>/edit" title="Editar"
              >✏️</a
            >
            <form
              action="<%= baseURLComentarios %>/<%= c.id %>?_method=DELETE"
              method="POST"
              class="inline-form"
              title="Eliminar"
            >
              <button type="submit">🗑️</button>
            </form>
          </div>
        </div>
        <p class="opinion"><%= c.opinion %></p>
      </div>
      <% } %>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
