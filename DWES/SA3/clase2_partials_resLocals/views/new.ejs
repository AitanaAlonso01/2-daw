<%- include('partials/header') %>
<div class="glass-container">
  <div class="card">
    <h1>📝 Nuevo Comentario</h1>
    <form action="<%= baseURLComentarios %>" method="POST" class="formulario">
      <input type="text" placeholder="👤 Usuario..." name="usuario" required />
      <textarea
        name="opinion"
        placeholder="✍️ Escribe tu opinión..."
        cols="30"
        rows="5"
        required
      ></textarea>
      <div class="botones">
        <input type="submit" value="Guardar" class="btn" />
        <a href="<%= baseURLComentarios %>/comentarios" class="btn-secondary"
          >Cancelar</a
        >
      </div>
    </form>
  </div>
</div>
<%- include('partials/footer') %>
